{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "Character",
  "description": "A WoWFinder Character",
  "type": "object",
  "properties": {
    "region": {
      "type": "string"
    },
    "realm": {
      "type": "string"
    },
    "name": {
      "type": "string"
    },
    "battlegroup": {
      "type": "string"
    },
    "class": {
      "type": "integer"
    },
    "race": {
      "type": "integer"
    },
    "gender": {
      "type": "integer"
    },
    "level": {
      "type": "integer"
    },
    "achievementPoints": {
      "type": "integer"
    },
    "thumbnail": {
      "type": "string"
    },
    "calcClass": {
      "type": "string"
    },
    "faction": {
      "type": "integer"
    },
    "totalHonorableKills": {
      "type": "integer"
    },
    "guild":{
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        }
      }
    },
    "items": {
      "type": "object",
      "properties": {
        "averageItemLevel": {
          "type": "integer"
        },
        "averageItemLevelEquipped": {
          "type": "integer"
        },
        "finger1": {
          "type": "object",
          "properties": {
            "id": {
              "type": "integer"
            },
            "itemLevel": {
              "type": "integer"
            }
          }
        },
        "finger2": {
          "type": "object",
          "properties": {
            "id": {
              "type": "integer"
            },
            "itemLevel": {
              "type": "integer"
            }
          }
        }
      }
    },
    "progression":{
      "type": "object",
      "properties": {
        "raids": {
          "type": "array",
          "items": {
            "type": "object",
            "properties":{
              "name": {
                "type": "string"
              },
              "lfr":{
                "type": "integer"
              },
              "normal": {
                "type": "integer"
              },
              "heroic": {
                "type": "integer"
              },
              "mythic": {
                "type": "integer"
              },
              "id": {
                "type": "integer"
              },
              "bosses": {
                "type": "array",
                "items": {
                  "type": "object",
                  "properties": {
                    "id": {
                      "type": "integer"
                    },
                    "name": {
                      "type": "string"
                    },
                    "lfrKills": {
                      "type": "integer"
                    },
                    "lfrTimestamp": {
                      "type": "integer"
                    },
                    "normalKills": {
                      "type": "integer"
                    },
                    "normalTimestamp": {
                      "type": "integer"
                    },
                    "heroicKills": {
                      "type": "integer"
                    },
                    "heroicTimestamp": {
                      "type": "integer"
                    },
                    "mythicKills": {
                      "type": "integer"
                    },
                    "mythicTimestamp": {
                      "type": "integer"
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}